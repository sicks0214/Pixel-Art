{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/services/image/imageProcessor.ts"
  ]
}
