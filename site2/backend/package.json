{
  "name": "universal-web-app-backend",
  "version": "2.0.0",
  "description": "通用Web应用框架 - 后端API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:dev": "tsc",
    "start": "tsx src/index.ts",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/tests --testPathIgnorePatterns=src/tests/integration",
    "test:integration": "jest --testPathPattern=src/tests/integration",
    "test:performance": "jest --testNamePattern=\"性能|performance|Performance\"",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:memory": "node --expose-gc node_modules/.bin/jest --logHeapUsage",
    "test:api": "node examples/api-usage-examples.js",
    "test:health": "curl -f http://localhost:3001/api/color03/health || exit 1",
    "test:report": "jest --coverage && open coverage/lcov-report/index.html",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.0",
    "prisma": "^5.0.0",
    "rate-limiter-flexible": "^3.0.0",
    "redis": "^4.6.0",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.10.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.7",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
